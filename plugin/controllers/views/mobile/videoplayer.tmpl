#from Plugins.Extensions.OpenWebif.controllers.i18n import tstrings
<html>
<head>
<title>OpenWebif - Stream Player</title>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta name="viewport" content="user-scalable=no, width=device-width, initial-scale=1.0"/>
<meta name="apple-mobile-web-app-capable" content="yes" />
<style>
body {
	margin: 0;
	padding: 0;
	background: #000;
	font-family: Arial, sans-serif;
}
.video-container {
	position: relative;
	width: 100%;
	height: 100vh;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}
video {
	width: 100%;
	max-height: 100vh;
	background: #000;
}
.controls {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	background: rgba(0,0,0,0.7);
	color: #fff;
	padding: 10px;
	display: flex;
	justify-content: space-between;
	align-items: center;
	z-index: 100;
}
.channel-name {
	font-size: 16px;
	font-weight: bold;
}
.back-button {
	background: #444;
	color: #fff;
	border: none;
	padding: 8px 16px;
	border-radius: 4px;
	text-decoration: none;
	font-size: 14px;
}
.error {
	color: #ff4444;
	padding: 20px;
	text-align: center;
}
</style>
</head>
<body>
<div class="video-container">
	<div class="controls">
		<span class="channel-name">$name</span>
		<a href="javascript:history.back()" class="back-button">$tstrings['back']</a>
	</div>
	<div style="padding: 20px; text-align: center;">
		<h3 style="color: #fff; margin-bottom: 20px;">Opening stream...</h3>
		<p style="color: #aaa;">If the app chooser doesn't appear, <a id="retry-link" href="#" style="color: #0066cc;">click here</a></p>
	</div>
</div>
<script>
var streamUrl = '$streamurl';
var channelName = '$name';
var backLabel = '$tstrings["back"]';
var isIOS = /(iPhone|iPad|iPod)/i.test(navigator.userAgent);

if (isIOS) {
	// iOS: Show player selection options
	var html = '<div class="controls"><span class="channel-name">' + channelName + '</span><a href="javascript:history.back()" class="back-button">' + backLabel + '</a></div>';
	html += '<div style="padding: 20px; color: #fff;"><h3 style="margin-bottom: 20px;">Choose Your Player</h3>';
	html += '<p style="color: #aaa; margin-bottom: 20px;">Tap a button to open the stream in your preferred player app</p>';
	html += '<div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 15px; max-width: 400px; margin: 0 auto;">';
	html += '<a href="vlc-x-callback://x-callback-url/stream?url=' + encodeURIComponent(streamUrl) + '" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); padding: 20px; border-radius: 10px; text-align: center; text-decoration: none; color: #fff; font-weight: bold;">VLC<br><span style="font-size: 12px; opacity: 0.8;">Most formats</span></a>';
	html += '<a href="infuse://x-callback-url/play?url=' + encodeURIComponent(streamUrl) + '" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); padding: 20px; border-radius: 10px; text-align: center; text-decoration: none; color: #fff; font-weight: bold;">Infuse<br><span style="font-size: 12px; opacity: 0.8;">HLS/IPTV</span></a>';
	html += '<a href="nplayer-' + streamUrl + '" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); padding: 20px; border-radius: 10px; text-align: center; text-decoration: none; color: #fff; font-weight: bold;">nPlayer<br><span style="font-size: 12px; opacity: 0.8;">All codecs</span></a>';
	html += '<a href="oplayer://' + streamUrl.replace('http://', '').replace('https://', '') + '" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); padding: 20px; border-radius: 10px; text-align: center; text-decoration: none; color: #fff; font-weight: bold;">OPlayer<br><span style="font-size: 12px; opacity: 0.8;">Universal</span></a>';
	html += '</div>';
	html += '<div style="margin-top: 30px; padding: 15px; background: #1a1a1a; border-radius: 5px;"><p style="color: #aaa; margin-bottom: 10px;">Stream URL:</p>';
	html += '<div style="font-family: monospace; font-size: 11px; word-break: break-all; color: #4a9eff;">' + streamUrl + '</div></div></div>';
	document.querySelector('.video-container').innerHTML = html;
} else {
	// Android: Use original intent method
	function openStream() {
		// Use Android intent to trigger system app chooser
		window.location.href = 'intent:' + streamUrl + '#Intent;type=video/*;action=android.intent.action.VIEW;end';
	}

	// Try to open immediately
	setTimeout(openStream, 500);

	// Allow manual retry
	document.getElementById('retry-link').addEventListener('click', function(e) {
		e.preventDefault();
		openStream();
	});
}
</script>
</body>
</html>
