#from Plugins.Extensions.OpenWebif.controllers.i18n import tstrings
<html>
<head>
<title>OpenWebif - Stream Player</title>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta name="viewport" content="user-scalable=no, width=device-width, initial-scale=1.0"/>
<meta name="apple-mobile-web-app-capable" content="yes" />
<style>
body {
	margin: 0;
	padding: 0;
	background: #000;
	font-family: Arial, sans-serif;
}
.video-container {
	position: relative;
	width: 100%;
	height: 100vh;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}
video {
	width: 100%;
	max-height: 100vh;
	background: #000;
}
.controls {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	background: rgba(0,0,0,0.7);
	color: #fff;
	padding: 10px;
	display: flex;
	justify-content: space-between;
	align-items: center;
	z-index: 100;
}
.channel-name {
	font-size: 16px;
	font-weight: bold;
}
.back-button {
	background: #444;
	color: #fff;
	border: none;
	padding: 8px 16px;
	border-radius: 4px;
	text-decoration: none;
	font-size: 14px;
}
.error {
	color: #ff4444;
	padding: 20px;
	text-align: center;
}
</style>
</head>
<body>
<div class="video-container">
	<div class="controls">
		<span class="channel-name">$name</span>
		<a href="javascript:history.back()" class="back-button">$tstrings['back']</a>
	</div>
	<div style="padding: 20px; text-align: center;">
		<h3 style="color: #fff; margin-bottom: 20px;">Opening stream...</h3>
		<p style="color: #aaa;">If the app chooser doesn't appear, <a id="retry-link" href="#" style="color: #0066cc;">click here</a></p>
	</div>
</div>
<script>
// Automatically trigger the system app chooser
function openStream() {
	// Use Android intent to trigger system app chooser
	window.location.href = 'intent:$streamurl#Intent;type=video/*;action=android.intent.action.VIEW;end';
}

// Try to open immediately
setTimeout(openStream, 500);

// Allow manual retry
document.getElementById('retry-link').addEventListener('click', function(e) {
	e.preventDefault();
	openStream();
});
</script>
</body>
</html>
