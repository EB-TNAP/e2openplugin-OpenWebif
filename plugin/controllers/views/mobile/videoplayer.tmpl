#from Plugins.Extensions.OpenWebif.controllers.i18n import tstrings
<html>
<head>
<title>OpenWebif - Stream Player</title>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta name="viewport" content="user-scalable=no, width=device-width, initial-scale=1.0"/>
<meta name="apple-mobile-web-app-capable" content="yes" />
<style>
body {
	margin: 0;
	padding: 0;
	background: #000;
	font-family: Arial, sans-serif;
}
.video-container {
	position: relative;
	width: 100%;
	height: 100vh;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}
.controls {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	background: rgba(0,0,0,0.7);
	color: #fff;
	padding: 10px;
	display: flex;
	justify-content: space-between;
	align-items: center;
	z-index: 100;
}
.channel-name {
	font-size: 16px;
	font-weight: bold;
}
.back-button {
	background: #444;
	color: #fff;
	border: none;
	padding: 8px 16px;
	border-radius: 4px;
	text-decoration: none;
	font-size: 14px;
}
.player-chooser {
	display: none;
	padding: 20px;
	text-align: center;
	color: #fff;
}
.player-grid {
	display: grid;
	grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
	gap: 15px;
	margin: 20px auto;
	max-width: 500px;
}
.player-button {
	background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
	border: 2px solid #888;
	padding: 20px;
	border-radius: 10px;
	text-align: center;
	cursor: pointer;
	text-decoration: none;
	display: block;
	color: #fff;
	font-size: 16px;
	font-weight: bold;
	transition: all 0.2s;
}
.player-button:active {
	transform: scale(0.95);
}
.player-note {
	font-size: 12px;
	margin-top: 5px;
	opacity: 0.8;
}
.stream-url-box {
	background: #1a1a1a;
	padding: 15px;
	margin: 20px;
	border-radius: 5px;
	border: 1px solid #333;
}
.stream-url {
	font-family: monospace;
	font-size: 11px;
	word-break: break-all;
	color: #4a9eff;
}
.copy-btn {
	background: #4287f5;
	border: none;
	padding: 10px 20px;
	border-radius: 4px;
	color: #fff;
	margin-top: 10px;
	cursor: pointer;
}
</style>
</head>
<body>
<div class="video-container">
	<div class="controls">
		<span class="channel-name">$name</span>
		<a href="javascript:history.back()" class="back-button">$tstrings['back']</a>
	</div>

	<div id="android-loader" style="padding: 20px; text-align: center;">
		<h3 style="color: #fff; margin-bottom: 20px;">Opening stream...</h3>
		<p style="color: #aaa;">If the app chooser doesn't appear, <a id="retry-link" href="#" style="color: #0066cc;">click here</a></p>
	</div>

	<div id="ios-chooser" class="player-chooser">
		<h3 style="margin-bottom: 10px;">Choose Your Player</h3>
		<p style="color: #aaa; margin-bottom: 20px;">Select a video player app to open the stream</p>

		<div class="player-grid">
			<a href="#" class="player-button" data-player="vlc">
				VLC
				<div class="player-note">Most formats</div>
			</a>
			<a href="#" class="player-button" data-player="infuse">
				Infuse
				<div class="player-note">HLS/IPTV</div>
			</a>
			<a href="#" class="player-button" data-player="nplayer">
				nPlayer
				<div class="player-note">All codecs</div>
			</a>
			<a href="#" class="player-button" data-player="oplayer">
				OPlayer
				<div class="player-note">Universal</div>
			</a>
		</div>

		<div class="stream-url-box">
			<p style="color: #aaa; margin-bottom: 10px;">Or copy the stream URL:</p>
			<div class="stream-url">$streamurl</div>
			<button class="copy-btn" id="copy-btn">Copy URL</button>
			<div id="copy-msg" style="color: #48bb78; margin-top: 10px; display: none;">Copied!</div>
		</div>
	</div>
</div>

<script>
var streamUrl = '$streamurl';
var isIOS = /(iPhone|iPad|iPod)/i.test(navigator.userAgent);
var isAndroid = /android/i.test(navigator.userAgent);

// iOS player URL schemes
var iosPlayers = {
	vlc: 'vlc-x-callback://x-callback-url/stream?url=' + encodeURIComponent(streamUrl),
	infuse: 'infuse://x-callback-url/play?url=' + encodeURIComponent(streamUrl),
	nplayer: 'nplayer-' + streamUrl,
	oplayer: 'oplayer://' + streamUrl.replace('http://', '').replace('https://', '')
};

if (isAndroid) {
	// Android: Use intent to trigger system app chooser (ORIGINAL BEHAVIOR)
	function openAndroidIntent() {
		window.location.href = 'intent:' + streamUrl + '#Intent;type=video/*;action=android.intent.action.VIEW;end';
	}

	// Auto-open after short delay
	setTimeout(openAndroidIntent, 500);

	// Manual retry
	document.getElementById('retry-link').addEventListener('click', function(e) {
		e.preventDefault();
		openAndroidIntent();
	});

} else if (isIOS) {
	// iOS: Show player chooser
	document.getElementById('android-loader').style.display = 'none';
	document.getElementById('ios-chooser').style.display = 'block';

	// Handle player button clicks
	var buttons = document.querySelectorAll('.player-button');
	buttons.forEach(function(btn) {
		btn.addEventListener('click', function(e) {
			e.preventDefault();
			var player = this.getAttribute('data-player');
			if (iosPlayers[player]) {
				window.location.href = iosPlayers[player];
			}
		});
	});

	// Copy URL functionality
	document.getElementById('copy-btn').addEventListener('click', function() {
		if (navigator.clipboard && navigator.clipboard.writeText) {
			navigator.clipboard.writeText(streamUrl).then(function() {
				document.getElementById('copy-msg').style.display = 'block';
				setTimeout(function() {
					document.getElementById('copy-msg').style.display = 'none';
				}, 2000);
			});
		} else {
			// Fallback
			var textarea = document.createElement('textarea');
			textarea.value = streamUrl;
			textarea.style.position = 'fixed';
			textarea.style.opacity = 0;
			document.body.appendChild(textarea);
			textarea.select();
			document.execCommand('copy');
			document.body.removeChild(textarea);
			document.getElementById('copy-msg').style.display = 'block';
			setTimeout(function() {
				document.getElementById('copy-msg').style.display = 'none';
			}, 2000);
		}
	});

} else {
	// Desktop: Direct link
	window.location.href = streamUrl;
}
</script>
</body>
</html>
