#from Plugins.Extensions.OpenWebif.controllers.i18n import tstrings
<html>
<head>
<title>OpenWebif - Stream Player</title>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta name="viewport" content="user-scalable=no, width=device-width, initial-scale=1.0"/>
<meta name="apple-mobile-web-app-capable" content="yes" />
<style>
body {
	margin: 0;
	padding: 0;
	background: #000;
	font-family: Arial, sans-serif;
}
.video-container {
	position: relative;
	width: 100%;
	height: 100vh;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}
video {
	width: 100%;
	max-height: 100vh;
	background: #000;
}
.controls {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	background: rgba(0,0,0,0.7);
	color: #fff;
	padding: 10px;
	display: flex;
	justify-content: space-between;
	align-items: center;
	z-index: 100;
}
.channel-name {
	font-size: 16px;
	font-weight: bold;
}
.back-button {
	background: #444;
	color: #fff;
	border: none;
	padding: 8px 16px;
	border-radius: 4px;
	text-decoration: none;
	font-size: 14px;
}
.error {
	color: #ff4444;
	padding: 20px;
	text-align: center;
}
</style>
</head>
<body>
<div class="video-container">
	<div class="controls">
		<span class="channel-name">$name</span>
		<a href="javascript:history.back()" class="back-button">$tstrings['back']</a>
	</div>
	<div id="player-options" style="padding: 20px; text-align: center;">
		<h3 style="color: #fff; margin-bottom: 20px;">Select Player</h3>
		<button onclick="playInBrowser()" class="player-btn">Play in Browser</button>
		<a href="vlc://$streamurl" class="player-btn">Open in VLC</a>
		<a href="intent:$streamurl#Intent;type=video/*;package=com.mxtech.videoplayer.ad;end" class="player-btn">Open in MX Player</a>
		<a href="intent:$streamurl#Intent;type=video/*;action=android.intent.action.VIEW;end" class="player-btn">Open in Other App</a>
	</div>
	<video id="player" controls autoplay playsinline webkit-playsinline muted style="display:none;">
		<source src="$streamurl" type="application/vnd.apple.mpegurl">
		<source src="$streamurl" type="video/mp2t">
		<p class="error">Your browser does not support HTML5 video streaming.</p>
	</video>
</div>
<style>
.player-btn {
	display: block;
	width: 100%;
	max-width: 300px;
	margin: 10px auto;
	padding: 15px;
	background: #0066cc;
	color: #fff;
	text-decoration: none;
	border: none;
	border-radius: 5px;
	font-size: 16px;
	cursor: pointer;
}
.player-btn:active {
	background: #0052a3;
}
</style>
<script>
var video = document.getElementById('player');

function playInBrowser() {
	document.getElementById('player-options').style.display = 'none';
	video.style.display = 'block';

	// Unmute after starting (Chrome autoplay policy workaround)
	video.addEventListener('playing', function() {
		video.muted = false;
	}, { once: true });

	video.load();
	video.play().catch(function(e) {
		console.error('Play error:', e);
	});
}

video.addEventListener('error', function(e) {
	console.error('Video error:', e);
	var errorMsg = 'Stream error. ';
	if (video.error) {
		switch(video.error.code) {
			case video.error.MEDIA_ERR_ABORTED:
				errorMsg += 'Playback aborted.';
				break;
			case video.error.MEDIA_ERR_NETWORK:
				errorMsg += 'Network error.';
				break;
			case video.error.MEDIA_ERR_DECODE:
				errorMsg += 'Decoding error.';
				break;
			case video.error.MEDIA_ERR_SRC_NOT_SUPPORTED:
				errorMsg += 'Format not supported. Try VLC or MX Player instead.';
				break;
			default:
				errorMsg += 'Unknown error.';
		}
	}
	alert(errorMsg);
	document.getElementById('player-options').style.display = 'block';
	video.style.display = 'none';
}, false);
</script>
</body>
</html>
