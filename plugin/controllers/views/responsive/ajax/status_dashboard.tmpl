<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OpenWebif Network Status Dashboard</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 20px;
            min-height: 100vh;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
        }

        .header {
            text-align: center;
            color: white;
            margin-bottom: 30px;
        }

        .header h1 {
            font-size: 2.5em;
            margin-bottom: 10px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }

        .header p {
            font-size: 1.1em;
            opacity: 0.9;
        }

        .badge {
            display: inline-block;
            padding: 5px 15px;
            background: rgba(255,255,255,0.2);
            border-radius: 20px;
            margin: 10px 5px;
            font-size: 0.9em;
        }

        .badge.local-only {
            background: #48bb78;
            font-weight: bold;
        }

        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 20px;
            margin-bottom: 20px;
        }

        .card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0,0,0,0.3);
        }

        .card-header {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 2px solid #f0f0f0;
        }

        .card-icon {
            font-size: 2.5em;
            margin-right: 15px;
        }

        .card-title {
            font-size: 1.5em;
            font-weight: 600;
            color: #2d3748;
        }

        .card-content {
            color: #4a5568;
        }

        .stat-row {
            display: flex;
            justify-content: space-between;
            padding: 12px 0;
            border-bottom: 1px solid #f0f0f0;
        }

        .stat-row:last-child {
            border-bottom: none;
        }

        .stat-label {
            font-weight: 500;
            color: #718096;
        }

        .stat-value {
            font-weight: 600;
            color: #2d3748;
        }

        .stat-value.success {
            color: #48bb78;
        }

        .stat-value.warning {
            color: #ed8936;
        }

        .stat-value.danger {
            color: #f56565;
        }

        .stat-value.info {
            color: #4299e1;
        }

        .progress-bar {
            width: 100%;
            height: 8px;
            background: #e2e8f0;
            border-radius: 4px;
            overflow: hidden;
            margin-top: 8px;
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
            transition: width 0.3s ease;
        }

        .alert {
            padding: 15px;
            border-radius: 8px;
            margin-top: 15px;
            font-size: 0.95em;
        }

        .alert-success {
            background: #c6f6d5;
            color: #22543d;
            border-left: 4px solid #48bb78;
        }

        .alert-warning {
            background: #feebc8;
            color: #7c2d12;
            border-left: 4px solid #ed8936;
        }

        .alert-danger {
            background: #fed7d7;
            color: #742a2a;
            border-left: 4px solid #f56565;
        }

        .alert-info {
            background: #bee3f8;
            color: #2c5282;
            border-left: 4px solid #4299e1;
        }

        .ip-list {
            max-height: 300px;
            overflow-y: auto;
            margin-top: 15px;
        }

        .ip-item {
            padding: 10px;
            background: #f7fafc;
            border-radius: 6px;
            margin-bottom: 8px;
            font-family: 'Courier New', monospace;
            font-size: 0.9em;
        }

        .ip-item.locked {
            background: #fed7d7;
            border-left: 3px solid #f56565;
        }

        .refresh-indicator {
            text-align: center;
            color: white;
            margin-top: 20px;
            font-size: 0.9em;
            opacity: 0.8;
        }

        .auto-refresh {
            display: inline-block;
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }

        .big-number {
            font-size: 3em;
            font-weight: bold;
            text-align: center;
            margin: 20px 0;
            color: #667eea;
        }

        .status-indicator {
            display: inline-block;
            width: 10px;
            height: 10px;
            border-radius: 50%;
            margin-right: 8px;
        }

        .status-indicator.online {
            background: #48bb78;
            box-shadow: 0 0 10px #48bb78;
        }

        .status-indicator.offline {
            background: #cbd5e0;
        }

        @media (max-width: 768px) {
            .grid {
                grid-template-columns: 1fr;
            }

            .header h1 {
                font-size: 1.8em;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>OpenWebif Network Status Dashboard</h1>
            <p>SF8008 Receiver - Local Network Monitor</p>
            <span class="badge local-only">LOCAL NETWORK ONLY</span>
            <span class="badge">Last Updated: <span id="last-update">Loading...</span></span>
        </div>

        <div class="grid">
            <!-- Network Information Card -->
            <div class="card">
                <div class="card-header">
                    <div class="card-icon">[NET]</div>
                    <div class="card-title">Network Information</div>
                </div>
                <div class="card-content">
                    <div class="stat-row">
                        <span class="stat-label">Hostname</span>
                        <span class="stat-value" id="hostname">Loading...</span>
                    </div>
                    <div class="stat-row">
                        <span class="stat-label">Local IP Address</span>
                        <span class="stat-value info" id="local-ip">Loading...</span>
                    </div>
                    <div class="stat-row">
                        <span class="stat-label">Public IP Address</span>
                        <span class="stat-value info" id="public-ip">Loading...</span>
                    </div>
                    <div class="stat-row">
                        <span class="stat-label">Network Interface</span>
                        <span class="stat-value" id="interface">Loading...</span>
                    </div>
                    <div class="stat-row">
                        <span class="stat-label">Gateway</span>
                        <span class="stat-value" id="gateway">Loading...</span>
                    </div>
                </div>
            </div>

            <!-- WireGuard VPN Status Card -->
            <div class="card">
                <div class="card-header">
                    <div class="card-icon">[VPN]</div>
                    <div class="card-title">WireGuard VPN Status</div>
                </div>
                <div class="card-content">
                    <div class="stat-row">
                        <span class="stat-label">
                            <span class="status-indicator" id="vpn-status-indicator"></span>
                            VPN Status
                        </span>
                        <span class="stat-value" id="vpn-status">Loading...</span>
                    </div>
                    <div class="stat-row">
                        <span class="stat-label">VPN IP Address</span>
                        <span class="stat-value info" id="vpn-ip">Loading...</span>
                    </div>
                    <div class="stat-row">
                        <span class="stat-label">Connected Peers</span>
                        <span class="stat-value" id="vpn-peers">Loading...</span>
                    </div>
                    <div class="stat-row">
                        <span class="stat-label">Last Handshake</span>
                        <span class="stat-value" id="vpn-handshake">Loading...</span>
                    </div>
                    <div id="vpn-alert"></div>
                </div>
            </div>

            <!-- Brute Force Protection Card -->
            <div class="card">
                <div class="card-header">
                    <div class="card-icon">[SEC]</div>
                    <div class="card-title">Brute Force Protection</div>
                </div>
                <div class="card-content">
                    <div class="stat-row">
                        <span class="stat-label">Currently Tracked IPs</span>
                        <span class="stat-value warning" id="tracked-ips">Loading...</span>
                    </div>
                    <div class="stat-row">
                        <span class="stat-label">Locked Out IPs</span>
                        <span class="stat-value danger" id="locked-ips">Loading...</span>
                    </div>
                    <div class="stat-row">
                        <span class="stat-label">Total Failed Attempts</span>
                        <span class="stat-value" id="total-failed">Loading...</span>
                    </div>
                    <div class="stat-row">
                        <span class="stat-label">Total Successful Logins</span>
                        <span class="stat-value success" id="total-success">Loading...</span>
                    </div>
                    <div class="stat-row">
                        <span class="stat-label">Global Attacks Detected</span>
                        <span class="stat-value danger" id="global-attacks">Loading...</span>
                    </div>
                    <div id="protection-alert"></div>
                </div>
            </div>

            <!-- System Information Card -->
            <div class="card">
                <div class="card-header">
                    <div class="card-icon">[SYS]</div>
                    <div class="card-title">System Information</div>
                </div>
                <div class="card-content">
                    <div class="stat-row">
                        <span class="stat-label">System</span>
                        <span class="stat-value" id="system">Loading...</span>
                    </div>
                    <div class="stat-row">
                        <span class="stat-label">Kernel</span>
                        <span class="stat-value" id="kernel">Loading...</span>
                    </div>
                    <div class="stat-row">
                        <span class="stat-label">Uptime</span>
                        <span class="stat-value" id="uptime">Loading...</span>
                    </div>
                    <div class="stat-row">
                        <span class="stat-label">Load Average</span>
                        <span class="stat-value" id="load">Loading...</span>
                    </div>
                    <div class="stat-row">
                        <span class="stat-label">Memory Usage</span>
                        <span class="stat-value" id="memory">Loading...</span>
                    </div>
                    <div class="progress-bar">
                        <div class="progress-fill" id="memory-progress" style="width: 0%"></div>
                    </div>
                </div>
            </div>

            <!-- Recent Attack Activity Card -->
            <div class="card">
                <div class="card-header">
                    <div class="card-icon">[!]</div>
                    <div class="card-title">Recent Attack Activity</div>
                </div>
                <div class="card-content">
                    <div class="big-number" id="attacks-24h">0</div>
                    <div style="text-align: center; color: #718096; margin-bottom: 20px;">
                        Failed attempts in last 24 hours
                    </div>
                    <div class="stat-row">
                        <span class="stat-label">Last Hour</span>
                        <span class="stat-value danger" id="attacks-1h">Loading...</span>
                    </div>
                    <div class="stat-row">
                        <span class="stat-label">Unique Attacker IPs</span>
                        <span class="stat-value" id="unique-attackers">Loading...</span>
                    </div>
                </div>
            </div>

            <!-- Currently Locked IPs Card -->
            <div class="card">
                <div class="card-header">
                    <div class="card-icon">[X]</div>
                    <div class="card-title">Currently Locked IPs</div>
                </div>
                <div class="card-content">
                    <div id="locked-ips-list" class="ip-list">
                        <div style="text-align: center; color: #a0aec0; padding: 20px;">
                            Loading...
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="refresh-indicator">
            <span class="auto-refresh">*</span> Auto-refreshing every 5 seconds
        </div>
    </div>

    <script>
        // Update timestamp
        function updateTimestamp() {
            const now = new Date();
            document.getElementById('last-update').textContent = now.toLocaleTimeString();
        }

        // Fetch dashboard data
        async function fetchData() {
            try {
                const response = await fetch('/api/status_dashboard_data');
                const data = await response.json();

                // Update network info
                document.getElementById('hostname').textContent = data.network.hostname || 'N/A';
                document.getElementById('local-ip').textContent = data.network.local_ip || 'N/A';
                document.getElementById('public-ip').textContent = data.network.public_ip || 'Detecting...';
                document.getElementById('interface').textContent = data.network.interface || 'N/A';
                document.getElementById('gateway').textContent = data.network.gateway || 'N/A';

                // Update VPN status
                const vpnOnline = data.vpn.status === 'online';
                const statusIndicator = document.getElementById('vpn-status-indicator');
                statusIndicator.className = 'status-indicator ' + (vpnOnline ? 'online' : 'offline');

                const vpnStatusElem = document.getElementById('vpn-status');
                vpnStatusElem.textContent = data.vpn.status === 'online' ? '[OK] Online' : '[!] Offline';
                vpnStatusElem.className = 'stat-value ' + (vpnOnline ? 'success' : 'danger');

                document.getElementById('vpn-ip').textContent = data.vpn.ip || 'N/A';
                document.getElementById('vpn-peers').textContent = data.vpn.peers || '0';
                document.getElementById('vpn-handshake').textContent = data.vpn.last_handshake || 'Never';

                // VPN alert
                const vpnAlert = document.getElementById('vpn-alert');
                if (vpnOnline) {
                    vpnAlert.innerHTML = '<div class="alert alert-success">[OK] VPN is running - secure remote access enabled</div>';
                } else {
                    vpnAlert.innerHTML = '<div class="alert alert-warning">[!] VPN is not running - receiver exposed to internet</div>';
                }

                // Update brute force protection
                document.getElementById('tracked-ips').textContent = data.protection.tracked_ips || '0';
                document.getElementById('locked-ips').textContent = data.protection.locked_ips || '0';
                document.getElementById('total-failed').textContent = data.protection.total_failed || '0';
                document.getElementById('total-success').textContent = data.protection.total_success || '0';
                document.getElementById('global-attacks').textContent = data.protection.global_attacks || '0';

                // Protection alert
                const protectionAlert = document.getElementById('protection-alert');
                if (data.protection.locked_ips > 0) {
                    protectionAlert.innerHTML = '<div class="alert alert-danger">[!] ' + data.protection.locked_ips + ' IPs currently locked out</div>';
                } else if (data.protection.tracked_ips > 0) {
                    protectionAlert.innerHTML = '<div class="alert alert-warning">[!] Monitoring ' + data.protection.tracked_ips + ' suspicious IPs</div>';
                } else {
                    protectionAlert.innerHTML = '<div class="alert alert-success">[OK] No suspicious activity detected</div>';
                }

                // Update system info
                document.getElementById('system').textContent = data.system.name || 'N/A';
                document.getElementById('kernel').textContent = data.system.kernel || 'N/A';
                document.getElementById('uptime').textContent = data.system.uptime || 'N/A';
                document.getElementById('load').textContent = data.system.load || 'N/A';
                document.getElementById('memory').textContent = data.system.memory || 'N/A';
                document.getElementById('memory-progress').style.width = (data.system.memory_percent || 0) + '%';

                // Update attack activity
                document.getElementById('attacks-24h').textContent = data.attacks.last_24h || '0';
                document.getElementById('attacks-1h').textContent = data.attacks.last_1h || '0';
                document.getElementById('unique-attackers').textContent = data.attacks.unique_ips || '0';

                // Update locked IPs list
                const lockedList = document.getElementById('locked-ips-list');
                if (data.locked_ips && data.locked_ips.length > 0) {
                    lockedList.innerHTML = data.locked_ips.map(ip =>
                        '<div class="ip-item locked">' +
                        '[LOCKED] ' + ip.ip + ' - ' + ip.attempts + ' attempts, locked for ' + ip.remaining + 's' +
                        '</div>'
                    ).join('');
                } else {
                    lockedList.innerHTML = '<div style="text-align: center; color: #48bb78; padding: 20px;">[OK] No IPs currently locked</div>';
                }

                updateTimestamp();
            } catch (error) {
                console.error('Error fetching data:', error);
            }
        }

        // Initial load
        fetchData();

        // Auto-refresh every 5 seconds
        setInterval(fetchData, 5000);
    </script>
</body>
</html>
